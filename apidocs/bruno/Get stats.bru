meta {
  name: Get stats
  type: http
  seq: 4
}

get {
  url: {{API_BASE}}/stats
  body: none
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "identity": "{{USERNAME}}",
    "password": "{{PASSWORD}}"
  }
}

vars:post-response {
  token: res.body.token
}

script:pre-request {
  await bru.runRequest('Authenticate')
}

settings {
  encodeUrl: true
  timeout: 0
}
